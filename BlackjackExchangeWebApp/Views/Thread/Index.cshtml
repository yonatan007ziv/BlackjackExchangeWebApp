@model List<BlackjackExchangeWebApp.Models.DbModels.ThreadDbModel>
@{ViewData["Title"] = "Forum";}
<div class="text-center">
    <ul class="card list-unstyled">
        @if (Model.Count == 0)
        {
            <li>
                <label>There Are no Threads Yet...</label>
            </li>
        }
        else
        {
            <li>
                @foreach (BlackjackExchangeWebApp.Models.DbModels.ThreadDbModel thread in Model)
                {
                    <a asp-controller="Thread" asp-action="GetThread">@thread.Title - @thread.User.Username</a>
                }
            </li>
        }
    </ul>
</div>